<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styleLogin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MNMBASE.png" class="x_icon">
    <title>Login - Mãos Na Massa</title>
</head>

<body>
    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>
        <!------------------------ Header ------------------------->

        <div class="container">
            <div class="row justify-content-center text-center">
                <h1 class="entrar-title display-4 my-3 fw-medium">
                    Entrar na Conta
                </h1>
            </div>
        </div>

        <section id="login">
            <div class="container mx-auto">
                <div class="row">
                    <div class="col-11 col-md-10 col-lg-8 mx-auto px-2 py-4 glass">
                        <h1 class="text-center mb-3 login" aria-labelledby="login-heading">Login</h1>
                        <form id="loginForm" action="/users/login" method="POST" aria-labelledby="login-heading">
                            <div class="mx-5 mb-2">
                                <label for="email" class="form-label fs-4" aria-label="Endereço de E-mail">Endereço de
                                    E-mail</label>
                                <input type="email" id="email" name="email" class="form-control p-3 fs-5"
                                    placeholder="Digite seu e-mail" aria-describedby="emailHelp">
                            </div>

                            <div class="mx-5 my-4">
                                <label for="Senha" class="form-label fs-4" aria-label="Senha">Senha</label>
                                <div class="input-group input-group-background">
                                    <input type="password" id="Senha" name="senha" class="form-control p-3 fs-5"
                                        placeholder="Digite sua senha" aria-describedby="passwordHelp">
                                    <button class="btn btn-visibility" type="button" id="togglePassword"
                                        aria-label="Alternar visibilidade da senha">
                                        <span class="material-symbols-rounded visibility-icon">visibility_off</span>
                                    </button>
                                </div>
                                <a href="#" class="text-reset" style="font-size: 15px;" id="esqueceuSenhaButton">esqueceu sua senha?</a>
                            </div>


                            <div class="row mx-5 mb-4 text-center justify-content-center">
                                <input type="submit" value="Confirmar" class="confirmar" aria-label="Confirmar login">
                            </div>

                            <div class="row justify-content-center text-center">
                                <p class="mt-3 mb-1 cadastro">Ainda não tem conta?
                                    <a href="Cadastro" class="cadastre-se"
                                        aria-label="Ir para página de cadastro">Cadastre-se</a>
                                </p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal fade" id="accessCodeModal" tabindex="-1" aria-labelledby="accessCodeModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content bg-dark p-4 rounded-5">
                    <div class="modal-header">
                        <h1 class="modal-title fs-3 text-light" id="accessCodeModalLabel">Enviamos um código de acesso no seu e-mail!</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="codeInput" class="form-label fs-5 text-light">Digite o código para realizar log-in:</label>
                            <input type="text" id="codeInput" name="code"
                                class="form-control p-3 fs-5 bg-dark text-light"
                                placeholder="Digite aqui o código enviado por e-mail."
                                required>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="code_button fs-5" id="checkCodeButton">
                            Confirmar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!------------------------ Footer ------------------------->
        <%- include('partials/Footer') %>
            <!------------------------ Footer ------------------------->

            <script src="/js/paginaLogin.js"></script>
</body>

</html>