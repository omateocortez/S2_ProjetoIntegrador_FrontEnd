<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="styleDonatePix.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MnaMBranco.png">
    <title>Doações - Mãos Na Massa</title>
</head>
<body>
    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>    
    <!------------------------ Header ------------------------->
    <div class="container">
        <div class="col">
            <div class="row">
                <h1 class="mt-5 doacao">Doações</h1>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <h4 class="mt-3 desc_doacao">Sua doação contribuirá para a compra 
                    de materiais, que utilizaremos para 
                    construir as casas das pessoas com 
                    deficiência.</h4>
            </div>
        </div>

        <div class="row justify-content-center my-4">
            <div class="col text-center">
                <div class="row justify-content-center">
                    <h2 class="mt-5 formas_doacao">Formas de Doação</h2>
                </div> 

                <div class="row justify-content-center">
                    <div class="col-8">
                        <div class="accordion" id="accordion_payment">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button fs-4 rounded-4 pay_box" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Escolha como pagar
                                    </button>
                                </h2>
                                


                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion_payment">
                                    <div class="accordion-body">
                                        <div class="btn-group-toggle d-flex flex-column" data-toggle="buttons">
                                            <!-- Botão 1 - PIX -->
                                            <label class="btn rounded-pill px-5 py-3 my-2 w-100 text-center fs-4 active payment-option">
                                                <input type="radio" name="options" id="option1" autocomplete="off" checked> PIX
                                            </label>
                                            <!-- Botão 2 - Cartão de Crédito -->
                                            <label class="btn rounded-pill px-5 py-3 my-2 w-100 text-center fs-4 payment-option">
                                                <input type="radio" name="options" id="option2" autocomplete="off"> Cartão de Crédito
                                            </label>
                                            <!-- Botão 3 - Cartão de Débito -->
                                            <label class="btn rounded-pill px-5 py-3 mt-2 mb-3 w-100 text-center fs-4 payment-option">
                                                <input type="radio" name="options" id="option3" autocomplete="off"> Cartão de Débito
                                            </label>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
                
            </div>

            <div class="col text-center">
                <h2 class="mt">QR Code</h2>
                <p>(meramente ilustrativo)</p>
                <img src="/imgs/QRCode.png" class="col-6 qrcode">
                <h1 class="fw-normal mt-3">OU</h1>
                <div class="row justify-content-center">
                    <div class="col-8 rounded-5 mb-3 card">
                        <div class="card-body">
                        <h4 class="fw-normal text-start mt-3">CNPJ 32.951.999/0001-40</h4>
                        <h4 class="fw-normal text-start mt-3">Bradesco 237</h4>
                        <h4 class="fw-normal text-start mt-3">Agência 237</h4>
                        <h4 class="fw-normal text-start mt-3">C/C 0238328-4</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    // Ação quando um botão de opção for selecionado
    const radios = document.querySelectorAll('input[type="radio"][name="options"]');

    radios.forEach(radio => {
        radio.addEventListener('change', function() {
            // Remover a classe active de todos os botões
            radios.forEach(r => {
                const label = r.closest('label');
                label.classList.remove('active');
            });

            // Adicionar a classe active ao botão selecionado
            const activeLabel = this.closest('label');
            activeLabel.classList.add('active');
        });
    });
    </script>
    
    <!------------------------ Footer ------------------------->
    <%- include('partials/Footer') %>    
    <!------------------------ Footer ------------------------->
    
</body>
</html>
