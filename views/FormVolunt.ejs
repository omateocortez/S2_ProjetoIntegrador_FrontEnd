<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styleForms.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MNMBASE.png" class="x_icon">
    <title>Seja Voluntário - Mãos Na Massa</title>
</head>

<body>
    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>
        <!------------------------ Header ------------------------->

    <div class="container-fluid">
        <div class="row me-5">
            <h1 class="title_inscrição display-5 my-3 mb-4 ms-5 fw-medium">
                Faça parte do nosso projeto
            </h1>
        </div>
        <div class="row me-5">
            <p class="fs-5 ms-5">
                Formulário de Inscrição - Voluntariado Mãos Na Massa
            </p>
        </div>
    </div>

    <hr>

    <div class="container-fluid">
        <form class="col-10 ms-5 ps-3" id="formulario_voluntario">
            <!-- Nome -->
            <div class="mb-5">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" placeholder="Campo de resposta curta" required>
            </div>

            <!-- Email -->
            <div class="mb-5">
                <label for="email" class="form-label">E-mail</label>
                <input type="text" class="form-control" id="email" placeholder="Campo de resposta curta" required>
            </div>


            <!-- Endereço -->
            <div class="mb-5">
                <label for="mensagem" class="form-label">Mensagem </label>
                <textarea class="form-control" id="mensagem" rows="3" placeholder="Campo de resposta longa"
                    required></textarea>
            </div>



            <!-- Botão de envio -->
            <div class="d-flex justify-content-end">
                <button type="submit" class="enviar_button py-3 px-4 fs-5 rounded-5">ENVIAR
                    RESPOSTAS</button>
            </div>
        </form>


    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark rounded-5 p-3">

                <!-- Body -->
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <div class="col-auto d-flex justify-content-center align-items-center flex-column">
                            <script
                                src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs"
                                type="module"></script>
                            <dotlottie-player id="check-animation"
                                src="https://lottie.host/8fedeb1c-879e-423b-ad06-bba4565c31fb/DJvHf1vkx7.lottie"
                                background="transparent" speed="0.7"
                                style="width: auto; height: 400px"></dotlottie-player>
                            <!-- Texto abaixo da animação -->
                            <p class="mt-3 text-center fs-4 text-light">Formulário enviado <strong>com sucesso</strong>!</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!------------------------ Footer ------------------------->
    <%- include('partials/Footer') %>
        <!------------------------ Footer ------------------------->

    <script src="/js/FormVolunt.js"></script>
</body>

</html>