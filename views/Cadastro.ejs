<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styleCadastro.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MnaMBranco.png">
    <title>Cadastro - Mãos Na Massa</title>
</head>

<body>
    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>
        <!------------------------ Header ------------------------->

        <section id="login">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <h1 class="cadastro-title display-4 my-3 fw-medium">
                        Faça seu Cadastro
                    </h1>
                </div>
            </div>
            <div class="container">
                <div class="col-11 col-md-9 col-lg-8 mx-auto my-3 px-2 py-4 glass">
                    <h1 class="text-center mb-4 cadastro-membro">Cadastro de Voluntário</h1>

                    <div class="row mx-4 mb-3 justify-content-center">
                        <form id="form1" class="d-flex mb-2 px-4">
                            <div class="flex-fill me-2 input_nome">
                                <label for="nome1" class="form-label">Nome</label>
                                <input type="text" id="nome1" name="nome" placeholder="Ex.: João"
                                    class="form-control p-3 fs-5">
                            </div>
                            <div class="flex-fill input_sobrenome">
                                <label for="nome2" class="form-label">Sobrenome</label>
                                <input type="text" id="nome2" name="sobrenome" placeholder="Ex.: Silva"
                                    class="form-control p-3 fs-5">
                            </div>
                        </form>
                    </div>

                    <form id="form2">
                        <div class="col">
                            <div class="mx-5 mb-2">
                                <label for="email" class="form-label fs-4">Endereço de E-mail</label>
                                <input type="email" id="email" name="email" class="form-control p-3 fs-5"
                                    placeholder="Digite seu e-mail">
                            </div>

                            <div class="mx-5 my-4">
                                <label for="Senha" class="form-label fs-4">Senha (mínimo 8 caractéres)</label>
                                <div class="input-group input-group-background">
                                    <input type="password" id="Senha" name="senha" class="form-control p-3 fs-5"
                                        placeholder="Digite sua senha">
                                    <button class="btn btn-visibility visibility-active" type="button"
                                        id="togglePassword1">
                                        <span class="material-symbols-rounded visibility-icon">visibility_off</span>
                                    </button>
                                </div>
                            </div>

                            <!-- Campo de Confirmação de Senha -->
                            <div class="mx-5 my-4">
                                <label for="confirmaSenha" class="form-label fs-4">Confirme sua Senha</label>
                                <div class="input-group input-group-background">
                                    <input type="password" id="confirmaSenha" class="form-control p-3 fs-5"
                                        placeholder="Digite sua senha">
                                    <button class="btn btn-visibility visibility-active" type="button"
                                        id="togglePassword2">
                                        <span class="material-symbols-rounded visibility-icon">visibility_off</span>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </form>

                    <div class="row justify-content-center mb-4" id="cadastrar-como-func" style="display: none;">
                        <div class="form-check form-switch d-flex align-items-center justify-content-center g-2">
                            <label class="form-check-label justify-content-center"
                                for="flexSwitchCheckChecked">Cadastrar como Funcionário?</label>
                            <input class="form-check-input custom-switch ms-2 me-4 mb-1" type="checkbox" role="switch"
                                id="flexSwitchCheckChecked" name="funcCheck">
                        </div>
                    </div>
                    
                    <div class="row mt-3 justify-content-center align-items-center" id="termos">
                        <div
                            class="col-12 col-lg-auto d-flex flex-column flex-lg-row align-items-center justify-content-center text-center text-lg-start">
                            <label class="form-check-label mt-1 me-2" for="CheckTermos">
                                <span class="d-block d-lg-inline">Li e aceito os</span>
                                <a class="Pdp d-block d-lg-inline" href="">Termos de Uso</a>
                                <span class="d-block d-lg-inline">e</span>
                                <a class="Pdp d-block d-lg-inline" href="/PoliticaDePrivacidade">Políticas de
                                    Privacidade</a>
                            </label>
                            <input class="checkbox form-check-input ms-2" type="checkbox" value="" id="CheckTermos">
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="justify-content-center botoes">
                            <div class="col justify-content-center">
                                <div type="button" class="text-center confirmar" onclick="verificarSenhas()">Confirmar
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </section>
        <!------------------------ Footer --------------------------->
        <%- include('partials/Footer') %>
            <!------------------------ Footer --------------------------->

            <script type="module" src="/js/paginaCadastro.js"></script>
</body>

</html>