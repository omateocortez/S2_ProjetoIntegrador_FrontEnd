<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MnaMBranco.png">
    <title><%= proj.title %> - MÃ£os Na Massa</title>
</head>
<body>
    <!--        Header      -->
    <%- include('partials/Header') %>
    <!--        Header      -->

    <!--        Body        -->
    
    <div class="row">
        <a id="link-voltar">&lt; Voltar</a>
        <a href="/projetos/edit/<%= proj._id %>" id="botaoEditar" style="display: none;">EDITAR</a>

        <div class="justify-content-center text-center">
            <h1><%= proj ? proj.title : 'Erro' %></h1>
        </div>
    </div>

    <!---------------------- Carrossel ---------------------->
    <div class="row justify-content-center text-center">

        <div id="carouselExampleCaptions" class="carousel slide col-5 mb-5 rounded" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <% proj.images.forEach((img, index) => { %>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>" <%- index === 0 ? 'class="active" aria-current="true"' : ''%> aria-label="Slide <%= index + 1 %>"></button>
                <% }) %>
            </div>

            <div class="carousel-inner">
                <% proj.images.forEach((img, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <img src="/<%= img %>" class="d-block w-100" alt="Imagem do projeto '<%= proj.title %>'" onError="this.onerror=null; this.src='/imgs/no_img.png';">
                    </div>
                <% }) %>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!---------------------- End Carrosel ---------------------->

    <div class="row justify-content-center text-center">
        <% paragrafos.forEach(paragrafo => { %>
            <p><%= paragrafo %></p>
        <% }) %>
    </div>

    <!--        Body        -->

    <!--        Footer      -->
    <%- include('partials/Footer') %>
    <!--        Footer      -->
    
    <script type="module" src="/js/paginaProjetoGenerico.js"></script>
</body>
</html>