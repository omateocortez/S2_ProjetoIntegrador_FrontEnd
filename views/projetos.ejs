<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="styleProjeto.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MnaMBranco.png">
    <title>Projetos - Mãos Na Massa</title>
</head>
<body>
    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>    
    <!------------------------ Header ------------------------->

    <div id="corpo">
        <div class="container">
            <h1 class="text-center pb-3 pt-5 trabalhos">Nossos Trabalhos</h1>

            <!--TEMPORÁRIO-->
            <form action="/projetos/upload" method="POST" enctype="multipart/form-data">
                <label for="title">Titulo:</label><br>
                <input type="text" id="title" name="title" required><br>
                <label for="desc">Descrição:</label><br>
                <input type="text" size="75" id="desc" name="desc" required><br>
                <label for="file">Imagem:</label><br>
                <input type="file" id="file" name="file" required><br>
                <input class="mt-2" type="submit" value="Publicar">
            </form>
            <!--TEMPORÁRIO-->
            
            <ul style="list-style-type: none;">

                <% data.forEach(proj => { %>
                    <li>
                        <div class="col justify-content-center caixa" type="button" href="#">
                            <div class="row">
                                <div class="text-center">
                                    <img src="<%= proj.imgsrc %>" class="rounded img-fluid w-75" onerror="this.onerror=null; this.src='imgs/uploads/no_img.png';">
                                </div>
                                <h1 class="col-9 titulo-projeto"><%= proj.title %></h1>
                                <p class="col-3 pt-3 text-end data-projeto"><%= proj.date.toDateString() %></p>
                            </div>
                            <p class="descricao-projeto"><%= proj.desc %></p>
                        </div>
                    </li>
                <% }) %>
                            
            </ul>
        </div>
    </div>
    
    <!------------------------ Footer ------------------------->
    <%- include('partials/Footer') %>    
    <!------------------------ Footer ------------------------->

</body>
</html>
