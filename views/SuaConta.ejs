<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styleSuaConta.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap"
        rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MnaMBranco.png">
    <title>Sua Conta - Mãos Na Massa</title>
</head>

<body>
    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>
        <!------------------------ Header ------------------------->

            
        <div class="container">
            <div class="row justify-content-start text-start mt-4">
                <h1 class="entrar-title display-6 my-4 fw-medium col-12">
                    Sua Conta
                </h1>
            </div>
        </div>

        <section id="SuaConta" user-id="<%= data.id %>">
            <div class="container">
                <div class="row justify-content-start">
                    <div class="col-lg-8 col-md-10 col-sm-12 px-2 py-4 glass">
                        <form id="infoForm" aria-labelledby="info-heading">
                            <!-- Campos Nome e Sobrenome -->
                            <div class="row mb-4 nome_sobrenome_row">
                                <div class="col-6">
                                    <label for="nome" class="form-label fs-4" aria-label="Nome">Nome</label>
                                    <input type="text" id="nome" name="nome" class="form-control p-3 fs-5"
                                        placeholder="Digite seu nome" value="<%= data.nome %>">
                                </div>
                                <div class="col-6">
                                    <label for="sobrenome" class="form-label fs-4"
                                        aria-label="Sobrenome">Sobrenome</label>
                                    <input type="text" id="sobrenome" name="sobrenome" class="form-control p-3 fs-5"
                                        placeholder="Digite seu sobrenome" value="<%= data.sobrenome %>">
                                </div>
                            </div>

                            <!-- Campo de E-mail -->
                            <div class="mx-5 mb-2">
                                <label for="email" class="form-label fs-4" aria-label="Endereço de E-mail">Endereço de
                                    E-mail</label>
                                <input type="email" id="email" name="email" class="form-control p-3 fs-5"
                                    placeholder="Digite seu e-mail" aria-describedby="emailHelp" value="<%= data.email %>">
                            </div>

                            <!-- Campo de Senha com ícone de alterar senha -->
                            <div class="mx-5 my-4">
                                <label for="Senha" class="form-label fs-4" aria-label="Senha">Senha</label>
                                <div class="input-group input-group-background">
                                    <input type="password" id="Senha" name="senha" class="form-control p-3 fs-5"
                                        value="••••••••••••••" aria-describedby="passwordHelp" disabled>
                                    <button class="btn btn-visibility" type="button" id="togglePassword"
                                        aria-label="Alternar visibilidade da senha">
                                        <span class="material-symbols-rounded visibility-icon">visibility_off</span>
                                    </button>
                                    <!-- Botão de Editar (Alterar Senha) ao lado do campo de senha -->
                                    <button class="btn btn-change-password" type="button" data-bs-toggle="modal"
                                        data-bs-target="#changePasswordModal" aria-label="Alterar senha">
                                        <span class="material-symbols-rounded">border_color</span>
                                    </button>
                                </div>
                            </div>

                            <!-- Botão de Salvar Alterações -->
                            <div class="row mx-5 mb-4 text-center justify-content-center">
                                <button class="confirmar" aria-label="Salvar alterações" id="salvarAlteracoes">
                                    Salvar Alterações
                                </button>
                            </div>

                            <!-- Botão de Deletar Conta -->
                            <div class="row mx-5 mb-4 text-center justify-content-center">
                                <button class="deletar" aria-label="Apagar conta" data-bs-toggle="modal"
                                    data-bs-target="#DeleteUser">
                                    Deletar Conta
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Modal de Confirmação de Exclusão -->
        <div class="modal fade" id="DeleteUser" tabindex="-1" aria-labelledby="DeleteUserLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg h-100">
                <div class="modal-content bg-dark text-light p-3 rounded-5">
                    <div class="modal-header custom-modal-header">
                        <h1 class="modal-title ms-3 modal_title" id="DeleteUserLabel">Tem certeza que deseja <span
                                class="fw-bold">excluir</span> a conta?</h1>
                        <button type="button" class="btn-close btn-close-modal" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body align-items-center">
                        <div class="row justify-content-center text-center">
                            <button type="submit" class="mt-5 p-4 m-5 col-9 col-lg-6 delete_absolute"
                                id="delete_absolute_button">
                                Excluir conta <strong class="d-block">permanentemente</strong>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!-- Modal de Alteração de Senha -->
        <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content bg-dark p-4 rounded-5">
                    <div class="modal-header">
                        <h1 class="modal-title fs-3 text-light" id="changePasswordModalLabel">Alterar Senha</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulário de alteração de senha -->
                        <form id="changePasswordForm">
                            <div class="mb-3">
                                <label for="newPassword" class="form-label fs-5 text-light">Nova Senha</label>
                                <input type="password" class="form-control bg-dark text-light fs-5" id="newPassword"
                                    placeholder="Digite sua nova senha" required>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label fs-5 text-light">Confirmar Nova
                                    Senha</label>
                                <input type="password" class="form-control bg-dark text-light fs-5" id="confirmPassword"
                                    placeholder="Confirme sua nova senha" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="cancel_button fs-5" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="save_button fs-5" form="changePasswordForm" id="saveNewPass">Salvar
                            Alterações</button>
                    </div>
                </div>
            </div>
        </div>





        <script type="module" src="/js/SuaConta.js"></script>

        <!------------------------ Footer ------------------------->
        <%- include('partials/Footer') %>
            <!------------------------ Footer ------------------------->

</body>

</html>