            <button class="p-3 justify-content-center text-center contato" href="Contato">ENTRAR EM CONTATO</button>
        </div>
    </div>
 
</div>
    

    <!------------------------ Footer --------------------------->
    <%- include('partials/Footer') %>    
    <!------------------------ Footer --------------------------->

</body>
</html>