<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="styleNoticias.css">
    <link rel="stylesheet" href="/styleNoticias.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="imgs/MnaMBranco.png">
    <title>Notícias - Mãos Na Massa</title>
</head>
<body>

    <!------------------------ Header ------------------------->
    <%- include('partials/Header') %>    
    <!------------------------ Header ------------------------->
    <!-- Conteúdo da página principal -->
    <div class="container">
        <h1 class="text-center pb-3 pt-5 noticias">Notícias</h1>
        
        <section>
            <!------------------------ Modal Form -------------------------->
            <div class="container" id="botaoAdicionarNoticia" style="display: none;">
                <div class="row justify-content-end">
                    <button type="button" id="addNoticiaButton" class="btn w-auto btn-open-modal" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        + Adicionar Notícia
                    </button>
                </div>

            </div>
            
            <!-- Modal com o formulário -->
            <div class="modal fade custom-modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg custom-modal-dialog modal-dialog-centered"> <!-- Modal maior -->
                    <div class="modal-content bg-dark text-light p-3 caixa_modal"> <!-- Modal com fundo escuro e texto claro -->
                        <div class="modal-header custom-modal-header">
                            <h1 class="modal-title fs-5 modal-title-custom" id="exampleModalLabel"><%= noticia_edit ? 'Edição de' : 'Nova' %> <strong>Notícia</strong></h1>
                            <button type="button" class="btn-close btn-close-modal" data-bs-dismiss="modal" aria-label="Close"></button>    
                        </div>
                        <div class="modal-body custom-modal-body">
                            <!-- Formulário temporário dentro do modal -->
                            <form id="form-id" class="modal-form">
                                <div class="mb-3 form-group-title">
                                    <label for="title" class="form-label label-title text-light">Título:</label> <!-- Cor da label ajustada -->
                                    <input type="text" id="title" name="title" class="form-control w-100 input-title bg-dark text-light" value="<%= noticia_edit ? noticia_edit.title : '' %>"> <!-- Inputs com fundo escuro -->
                                </div>
                                <div class="mb-3 form-group-desc">
                                    <label for="desc" class="form-label label-desc text-light">Descrição:</label> <!-- Cor da label ajustada -->
                                    <textarea id="desc" name="noticia_text" class="form-control w-100 textarea-desc bg-dark text-light" rows="13" required><%- noticia_edit ? noticia_edit.noticia_text : '' %></textarea> <!-- Área de texto escura -->
                                </div>
                                <div class="mb-3 form-group-file">
                                    <label for="file" class="form-label label-file text-light">Imagens:</label> <!-- Cor da label ajustada -->
                                    <input type="file" id="file" name="files[]" class="form-control w-100 input-file bg-dark text-light" <%= noticia_edit ? '' : 'required'%> multiple> <!-- Input de arquivo escuro -->
                                </div>
                                                            
                                <div class="mb-3 form-group-date">
                                    <label for="date" class="form-label label-date text-light">Data:</label><br>
                                    <input class="box-calendar" type="date" id="date" name="upload_date" value="<%= noticia_edit ? noticia_edit.upload_date.toISOString().split('T')[0] : '' %>">
                                </div>
                            

                            </form>
                        </div>
                        <div class="modal-footer custom-modal-footer"> <!--Aqui iria a parte de editar a notícia-->
                            <div>
                                <%- noticia_edit ? `
                                <div>Criado por: ${ noticia_edit.creator_email }</div>
                                <div>Última edição: ${ noticia_edit.last_editor_email }</div>
                                ` : '' %>
                            </div>  
                            <button type="button" class="btn btn-close-footer" data-bs-dismiss="modal">Fechar</button>
                            <button type="submit" form="form-id" value="Publicar" class="btn btn-submit-footer"><%= noticia_edit ? 'Salvar' : 'Publicar' %></button>
                        </div>                        
                    </div>
                </div>
            </div>
            <!------------------------ Modal Form -------------------------->

            <ul style="list-style-type: none;" class="row g-4">
                <% data.forEach(noticia => { %>
                    <li class="col-12 col-lg-6 col-xl-4">
                        <div class="col d-flex justify-content-center caixa">
                            <div class="row d-flex flex-column">
                            <div class="text-center">
                                <img src="/<%= noticia.images[noticia.images.length - 1] %>" class="img-fluid imagem_noticia" onError="this.onerror=null; this.src='/imgs/no_img.png';"> 
                            </div>
                            <h1 class="titulo-noticia"><%= noticia.title %></h1>
                            <div class="row me-0 pe-0 justify-content-end text-end">
                            <p class="data-noticia">Publicado: <%= `${noticia.upload_date.getDate()}/${noticia.upload_date.getMonth() + 1}/${noticia.upload_date.getFullYear()}` %></p>
                        </div>
                        <p class="descricao-noticia"><%= noticia.noticia_text %></p>
                        
                        <div class="row align-items-center mt-4 botaoEditar" style="display: none;">
                            <div class="row justify-content-start text-start align-items-center">
                                <form action="/Noticias/edit/<%= noticia._id %>" enctype="multipart/form-data" method="get">
                                    <button type="submit" class="p-2 edit_button">
                                        <span class="material-symbols-rounded icone">
                                            border_color
                                        </span>
                                    </button>
                                    </form>
                                </div>
                            </div>           
                            
                            <!-- Button trigger modal -->
                            <div class="row justify-content-end text-end align-items-center botaoDeletar" style="display: none;">
                                <button type="button" class="justify-content-end text-end delete_button" data-bs-toggle="modal" data-bs-target="#DeleteNews" data-bs-noticia-id="<%= noticia._id %>">
                                    <span class="material-symbols-rounded icone">
                                        delete_forever
                                    </span>
                                </button>
                            </div>
                            
                        </li>
                <% }) %>
            </ul>   
          
            <!------------------------------------ Modal ------------------------------------>
            <div class="modal fade" id="DeleteNews" tabindex="-1" aria-labelledby="DeleteNewsLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl h-100 modal-dialog-centered">
                    <div class="modal-content bg-dark text-light p-2 caixa_modal">
                        <div class="modal-header custom-modal-header">
                            <h1 class="modal-title ms-3 modal_title" id="DeleteNewsLabel">Tem certeza que deseja excluir a notícia?</h1>
                            <button type="button" class="btn-close btn-close-modal" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="row justify-content-center text-center align-items-center">
                                <button type="submit" class="mt-1 p-4 m-5 delete_absolute" id="delete_absolute_button">
                                    Excluir notícia <strong class="d-block">permanentemente</strong>
                                </button>                                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!------------------------------------ Modal ------------------------------------> 
        </section>
    </div>       
    
    <div class="container">
        <div class="row">
            <div class="py-5"></div>
        </div>
    </div>
    <!------------------------ Footer ------------------------->
    <%- include('partials/Footer') %>    
    <!------------------------ Footer ------------------------->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script type="module" src="/js/paginaNoticias.js"></script>
</body>
</html>